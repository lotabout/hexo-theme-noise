extends base

block main

  // Blog title and subtitle
  header: .container.header
    span.title= config.title
    span.subtitle= config.subtitle

  .container.post-header
    h1: = page.title

  .container.meta
    .post-time= page.date.format(config.date_format)
    .post-tags
      ul
        for tag in page.tags.toArray()
          li.tag
            a(href=url_for(tag.path))= tag.name

  article
    .container
      != page.content

  footer
    .container
      .bar
      .footer= 'Â© '
        a(href='/', rel='nofollow')= config.title + '.'
        |  Powered by
        a(rel='nofollow', target='_blank', href='https://hexo.io')  Hexo.
